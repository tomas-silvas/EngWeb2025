extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 
                span Detalhes do Aluno
                a.w3-btn.w3-round.w3-grey(href="/front") Voltar à Lista

        .w3-container
            if aluno
                ul.w3-ul
                    li
                        strong ID: 
                        span= aluno._id
                    li
                        strong Nome: 
                        span= aluno.nome
                    li
                        strong GitHub: 
                        a(href=aluno.git target="_blank")= aluno.git
                    if aluno.tpc1
                        li
                            strong TPC1: 
                            span Concluído
                    if aluno.tpc2
                        li
                            strong TPC2: 
                            span Concluído
                    if aluno.tpc3
                        li
                            strong TPC3: 
                            span Concluído
            else
                p Nenhuma informação encontrada para este aluno.